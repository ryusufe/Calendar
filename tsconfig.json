{
    "compilerOptions": {
        "target": "ESNext",
        "module": "ESNext",
	"jsxImportSource": "solid-js",
        "moduleResolution": "node",
        "lib": ["DOM", "ESNext"],
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "strict": true,
        "jsx": "preserve",
        "resolveJsonModule": true,
        "skipLibCheck": true,
	"isolatedModules": true,
	"baseUrl": "./src",
	"paths": {
            "@components/*": ["components/*"],
	    "@libs/*": ["libs/*"],
	    "@styles/*": ["styles/*"],
	    "@assets/*": ["assets/*"],
	    "@type/*": ["types/*"]
        }

    },
    "include": ["src/**/*"]
}
